<Page
    x:Class="KoeBook.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:KoeBook.Views"
    xmlns:helpers="using:KoeBook.Helpers"
    xmlns:behaviors="using:KoeBook.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Loaded="OnLoaded">

    <TabView
            x:Name="MainTab"
            IsAddTabButtonVisible="False">
        <TabView.TabItems>
            <TabViewItem x:Uid="Shell_Main" IsClosable="False">
                <TabViewItem.IconSource>
                    <SymbolIconSource Symbol="Home"/>
                </TabViewItem.IconSource>
                <local:MainPage />
            </TabViewItem>
        </TabView.TabItems>
        <TabView.TabStripFooter>
            <Button
                HorizontalAlignment="Right"
                Margin="0,0,140,0"
                Command="{x:Bind ViewModel.OpenSettingsTabCommand}"
                CommandParameter="{x:Bind MainTab}">
                <SymbolIcon Symbol="Setting" />
            </Button>
        </TabView.TabStripFooter>
    </TabView>
</Page>
